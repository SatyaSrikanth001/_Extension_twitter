{
  "manifest_version": 3,
  "name": "X Feed Viewer",
  "version": "1.0",
  "description": "View someone else's X feed with their permission",
  "icons": {
    "48": "icons/icon48.png"
  },
  "permissions": [
    "http://127.0.0.1:8000/",
    "identity",
    "storage",
    "activeTab",
    "cookies",
    "scripting",
    "tabs",
    "alarms",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.x.com/*",
    "https://*.twitter.com/*",
    "http://localhost:8000/*"
  ],
  "oauth2": {
    "client_id": "RS1ZUTZxZ3dERzRRYTRUcVRwS3U6MTpjaQ",  
    "scopes": [
      "tweet.read",
      "users.read",
      "offline.access"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.x.com/*",
        "https://*.twitter.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles/inject.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  }
}
